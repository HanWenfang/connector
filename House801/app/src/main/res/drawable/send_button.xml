<?xml version="1.0" encoding="utf-8"?>
<!--
http://stackoverflow.com/questions/1521640/standard-android-button-with-a-different-color
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#AA1B8D8F" />
            <stroke
                android:width="2dp"
                android:color="#1B8D8F" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid android:color="#221B8D8F" />
            <stroke
                android:width="2dp"
                android:color="#1B8D8F" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#AA36BEAF"/>
            <stroke
                android:width="2dp"
                android:color="#36BEAF" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>